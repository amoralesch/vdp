{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "vdp": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src/main/typescript",
      "prefix": "vdp",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "target/classes/META-INF/resources",
            "index": "src/main/typescript/index.html",
            "main": "src/main/typescript/main.ts",
            "polyfills": "src/main/typescript/polyfills.ts",
            "tsConfig": "src/main/typescript/tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/main/typescript/favicon.ico",
              "src/main/typescript/assets"
            ],
            "styles": [
              "src/main/typescript/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/main/typescript/environments/environment.ts",
                  "with": "src/main/typescript/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "vdp:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "vdp:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "vdp:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/main/typescript/test.ts",
            "polyfills": "src/main/typescript/polyfills.ts",
            "tsConfig": "src/main/typescript/tsconfig.spec.json",
            "karmaConfig": "src/main/typescript/karma.conf.js",
            "assets": [
              "src/main/typescript/favicon.ico",
              "src/main/typescript/assets"
            ],
            "styles": [
              "src/main/typescript/styles.css"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/main/typescript/tsconfig.app.json",
              "src/main/typescript/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "vdp"
}
